<p id="notice"><%= notice %></p>

<h1>Our Dogs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>DOB</th>
      <th>Breed</th>
      <th>Medical conditions</th>
      <th>Vet</th>
      <th>In daycare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.dob.try(:stamp, '12/31/2000') %></td>
        <td><%= dog.breed.try(:name) %></td>
        <td><%= dog.medical_conditions %></td>
        <td><%= dog.vet.try(:doctor) %></td>
        <td><%= dog.in_daycare ? 'yes' : 'no' %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

